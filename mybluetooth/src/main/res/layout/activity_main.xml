<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.mybluetooth.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn on"
        android:id="@+id/bturnon"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="turnOnBluetooth" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn off"
        android:id="@+id/bturnoff"
        android:onClick="turnoffBluetooth"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/bturnon"
        android:layout_toEndOf="@+id/bturnon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/blist"
        android:layout_alignBottom="@+id/bturnoff"
        android:layout_toRightOf="@+id/bturnoff"
        android:layout_toEndOf="@+id/bturnoff"
        android:onClick="list" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/bturnon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visible"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/blist"
        android:layout_toRightOf="@+id/blist"
        android:layout_toEndOf="@+id/blist"
        android:onClick="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:id="@+id/button2"
        android:layout_below="@+id/bturnon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="search" />
</RelativeLayout>
